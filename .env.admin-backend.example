# Admin backend
NODE_ENV=development
EXIT_ON_UNHANDLED=false
ADMIN_PORT=3100
ADMIN_BASE_URL=http://localhost
ADMIN_LOG_URL=
ADMIN_ORIGIN=http://localhost:4300

# Public backend base URL for callbacks
BASE_URL=http://localhost
PORT=3000

# Admin auth
ADMIN_JWT_SECRET=change_me
ADMIN_AUD=messagedrop-admin
ADMIN_ISS=https://admin-auth.messagedrop.app/
ADMIN_OTP_SECRET=change_me
ADMIN_OTP_TTL_MS=300000
ADMIN_ROOT_USER=admin
ADMIN_ROOT_PASSWORD=change_me
ADMIN_ROOT_EMAIL=admin@example.com

# Login limits
ADMIN_LOGIN_LIMIT_WINDOW_MS=600000
ADMIN_LOGIN_LIMIT=10
ADMIN_LOGIN_VERIFY_LIMIT=20
ADMIN_LOGIN_SLOWDOWN_AFTER=5
ADMIN_LOGIN_SLOWDOWN_DELAY_MS=400
ADMIN_LOGIN_SLOWDOWN_MAX_MS=4000
ADMIN_LOGIN_VERIFY_SLOWDOWN_AFTER=5
ADMIN_LOGIN_VERIFY_SLOWDOWN_DELAY_MS=400
ADMIN_LOGIN_VERIFY_SLOWDOWN_MAX_MS=4000

# Public JWT
PUBLIC_JWT_SECRET=change_me
PUBLIC_AUD=messagedrop-frontend
PUBLIC_ISS=https://auth.messagedrop.app/

# Service JWT
SERVICE_JWT_ISSUER=service.admin-backend
SERVICE_JWT_AUDIENCE=service.admin-backend
SERVICE_JWT_AUDIENCE_ADMIN=service.admin-backend
SERVICE_JWT_AUDIENCE_BACKEND=service.backend
SERVICE_JWT_TRUSTED_JWKS=
SERVICE_JWT_TRUSTED_JWKS_PATH=

# Encryption keys
ENCRYPTION_KEY_PASSWORD=change_me
SIGNING_KEY_PASSWORD=change_me
