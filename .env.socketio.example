# Socket.io service
NODE_ENV=development
EXIT_ON_UNHANDLED=false
SOCKETIO_PORT=3400
ORIGIN=http://localhost:4200

# Admin log forwarding
ADMIN_BASE_URL=http://localhost
ADMIN_PORT=3100
ADMIN_LOG_URL=
SERVICE_JWT_AUDIENCE_ADMIN=service.admin-backend

# Service JWT
SERVICE_JWT_ISSUER=service.socketio
SERVICE_JWT_AUDIENCE=service.socketio
SERVICE_JWT_TRUSTED_JWKS=
SERVICE_JWT_TRUSTED_JWKS_PATH=

# Encryption keys
ENCRYPTION_KEY_PASSWORD=change_me
SIGNING_KEY_PASSWORD=change_me
JWT_SECRET=change_me

# Logging
SOCKETIO_LOG_CONNECTIONS=false
LOG_RETENTION_INFO=2d
LOG_RETENTION_ERROR=2d

# Socket load / parallelism tuning
SOCKETIO_HANDSHAKE_WINDOW_MS=10000
SOCKETIO_HANDSHAKE_MAX=200
SOCKETIO_EVENT_WINDOW_MS=10000
SOCKETIO_EVENT_MAX=300
SOCKETIO_EVENT_MAX_PAYLOAD_BYTES=1048576
